<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="03-create-persistent_logins-table" author="i.kupriyanov" context="default">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="persistent_logins"/>
            </not>
        </preConditions>
        <sqlFile path="/sql/persistent_logins.sql"/>

        <rollback>
            <dropTable tableName="persistent_logins" cascadeConstraints="true"/>
        </rollback>
    </changeSet>
</databaseChangeLog>