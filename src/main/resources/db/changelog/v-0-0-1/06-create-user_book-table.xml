<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="1.0.13" author="i.kupriyanov" context="default">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user_book"/>
            </not>
        </preConditions>
        <createTable tableName="user_book">
            <column name="user_id" type="BIGSERIAL">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="book_id" type="BIGSERIAL">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.0.14" author="i.kupriyanov" context="default">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_book"
                                 constraintName="fk_user_book_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>
    </changeSet>
    <changeSet id="1.0.15" author="i.kupriyanov" context="default">
        <addForeignKeyConstraint baseColumnNames="book_id"
                                 baseTableName="user_book"
                                 constraintName="fk_user_book_book_id"
                                 referencedColumnNames="id"
                                 referencedTableName="book"/>
    </changeSet>
</databaseChangeLog>